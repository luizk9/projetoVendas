@model ContatoModel

@{
    ViewData["Title"] = "Cadastrar Contato";
}

<div class="text-center">
  
     <h1 class="display-4">Cadastrar Contato</h1>  
</div>

<form asp-controller="Contato" asp-action="Criar" method="post">
  <div class="form-group">
    <label for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control"  placeholder="digite contato" /> 
    @Html.ValidationMessageFor(x => x.Nome)
  </div>
  <br/>
  <div class="form-group">
    <label for="Local">Local</label>
    <input type="text" asp-for="Local" class="form-control"  placeholder="digite local do contato" /> 
       @Html.ValidationMessageFor(x => x.Local)
  </div>
  <br/>
  <div class="form-group">
    <label for="ValorTotal">ValorTotal</label>
    <input type="text" asp-for="ValorTotal" class="form-control"  placeholder="digite o valor" /> 
       @Html.ValidationMessageFor(x => x.ValorTotal)
  </div>
  <br/>
      
    <button type="submit" class="btn btn-success btn-block">Adicionar</button>
    <a class="btn btn-warning btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>

  
</form>